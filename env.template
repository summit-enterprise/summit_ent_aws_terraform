# ========================================
# ENVIRONMENT VARIABLES TEMPLATE
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# AWS Configuration
AWS_DEFAULT_REGION=us-east-2
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Terraform Cloud Configuration
TF_CLOUD_ORGANIZATION=summit-enterprise
TF_CLOUD_WORKSPACE=summit_ent_aws_terraform

# Environment Settings
ENVIRONMENT=dev
VPC_CIDR=10.0.0.0/16

# Availability Zones (commented out - handled by script)
# AVAILABILITY_ZONES=["us-east-2a", "us-east-2b"]

# Subnet CIDRs (commented out - handled by script)
# PUBLIC_SUBNET_CIDRS=["10.0.1.0/24", "10.0.2.0/24"]
# PRIVATE_SUBNET_CIDRS=["10.0.10.0/24", "10.0.20.0/24"]

# EC2 Instance Types
KUBERNETES_INSTANCE_TYPE=t3.small
MONITORING_INSTANCE_TYPE=t3.small

# Storage Settings
KUBERNETES_STORAGE_SIZE=20
MONITORING_STORAGE_SIZE=20

# Monitoring Configuration
PROMETHEUS_SCRAPE_INTERVAL=15s
GRAFANA_ADMIN_PASSWORD=admin123

# ArgoCD Configuration
ARGOCD_NAMESPACE=argocd
ARGOCD_NODEPORT=30080

# S3 Bucket Settings
S3_BUCKET_VERSIONING=true
S3_BUCKET_ENCRYPTION=AES256

# Glue Configuration
GLUE_MAX_CAPACITY=2
GLUE_TIMEOUT=60

# ECS Configuration
ECS_DESIRED_COUNT=0
ECS_CPU=1024
ECS_MEMORY=2048

# Security Settings
ENABLE_SSH_ACCESS=true
ENABLE_ELASTIC_IPS=true

# Cost Optimization
USE_SPOT_INSTANCES=false
ENABLE_CLOUDWATCH=false
